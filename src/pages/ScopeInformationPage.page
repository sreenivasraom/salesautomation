<apex:page controller="ScopeInformationController" docType="HTML-5.0" showHeader="false" sidebar="false"  renderAs="pdf" applyBodyTag="false">

    <head>
        <style type="text/css">
            table {
                width: 70%;
            }
            table,th,td {
                border-collapse: collapse;
                table-layout: fixed;
            }
            tr,td {
                padding-bottom: 1em;
            }
            td.td1{
                display:block;
            }
           
        </style>
    </head>

    <apex:image value="{!$Resource.AutorabitLogo}" width="40%" />
    <img align="right" src="{!$Resource.NoDeploymentLogo}" width="100">
    </img>

    <h1>
      <b>
         <center> {!OppObj.Account.name} - Scope for POC</center>
      </b>
   </h1>
    <br/>
  
   <apex:pageMessage summary="No scope information to Display" severity="info" strength="2" rendered="{!if(Scopinfo.size == 0,true,false)}"/>
   
    
    <apex:repeat value="{!Scopinfo}" var="scpVar" >
        <table align="center" border="0" cellpadding="0" cellspacing="0">

            <tr>
                <td colspan="2">

                    <apex:outputLabel value="Client Name:"></apex:outputLabel>
                </td>
                <td>
                    <apex:outputText value="{!scpVar.Opportunity__r.name}"></apex:outputText>
                </td>
            </tr>
        
            <tr>
                <td colspan="2">
                    <apex:outputLabel value="Start Date:"></apex:outputLabel>
                </td>
                <td>
                    <apex:outputText value="{0,date,dd-MMMM-yyyy}">
                        <apex:param value="{! scpVar.Poc_Start_Date__c }" />
                    </apex:outputText>
                </td>
            </tr>

            <tr>
                <td colspan="2">
                    <apex:outputLabel value="End Date:"></apex:outputLabel>
                </td>
                <td>
                    <apex:outputText value="{0,date,dd-MMMM-yyyy}">
                        <apex:param value="{! scpVar.Poc_End_Date__c}" />
                    </apex:outputText>
                </td>
            </tr>
             <tr>
                <td colspan="2">
                    <apex:outputLabel value="AutoRABIT POC:"></apex:outputLabel>
                </td>
                <td>

                    <apex:outputText value="{!scpVar.AutoRABIT_POC__r.name}"></apex:outputText>
                </td>

            </tr>
            <tr>
                <td colspan="2">
                    <apex:outputLabel value="Point of Contact:"></apex:outputLabel>
                </td>
                <td>

                    <apex:outputText value="{!scpVar.Person_to_Contact__c}"></apex:outputText>
                </td>

            </tr>
            <tr>
                <td colspan="2">
                    <apex:outputLabel value="Approver:"></apex:outputLabel>
                </td>
                <td>
                    <apex:outputText value="{!scpVar.Approver__c}"></apex:outputText>
                </td>

            </tr>
            <tr>

                <td colspan="2">

                    <apex:outputLabel value="In Scope:"></apex:outputLabel>
                </td>
                <td>
                    <apex:outputText value="{!scpVar.Scope__c}"></apex:outputText>
                </td>

            </tr>
            <tr>
                <td colspan="2">
                    <apex:outputLabel value="Out of Scope:"></apex:outputLabel>
                   </td>
                    <td >
                    <apex:outputText value="{!scpVar.Out_ofScope__c}"></apex:outputText>
                </td>

            </tr>
             <tr>
                <td class ="td1">
                    <apex:outputLabel value="Pre-requisites:"></apex:outputLabel>
                   </td>
                   <td class ="td1">
                    <apex:outputText value="{!scpVar.Assumptions__c}"></apex:outputText>
                </td>

            </tr>
             <tr>
                <td class ="td1">
                    <apex:outputLabel value="Sign of Criteria:"></apex:outputLabel>
                   </td>
                    <td class ="td1">
                    <apex:outputText value="{!scpVar.sign_off_Criteria__c}"></apex:outputText>
                </td>

            </tr>
              <tr>
                <td colspan="2" >
                    <apex:outputLabel value="License & provision complete:"></apex:outputLabel>
                   </td>
                    <td>
                     <apex:outputText value="{!if(scpVar.License_provision_complete__c== true,'Yes','No')}"></apex:outputText> 
                </td>

            </tr>
               <tr>
                <td colspan="2">
                    <apex:outputLabel value="Demo Completed:"></apex:outputLabel>
                  </td>
                    <td>
                   <!-- <c:CheckboxComponent value="{!scpVar.Demo_Completed__c}" /> -->
                    <apex:outputText value="{!if(scpVar.Demo_Completed__c ==true,'Yes','No')}"></apex:outputText> 
                </td>

            </tr>
        </table>
    </apex:repeat>

</apex:page>